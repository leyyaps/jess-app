<section id="contact">
    <div class="container">
    <div>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key.to_s == 'notice' ? 'success' : 'danger' %>">
          <a href="#" data-dismiss="alert">×</a>
            <%= value %>
        </div>
      <% end %>
    </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contact</h2>
                <hr class="dark">
               
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center">
              
              <%= simple_form_for @contact, :html => {:class => 'form-horizontal', :id => 'contactForm' } do |f| %>
                <div class="form-group">
                  <%= f.input :name, :placeholder => "Your Name", label: false, :input_html => { :class => 'form-control' } %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <%= f.input :email, :placeholder => "Your Email", label: false, :input_html => { :class => 'form-control' } %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                <%= f.input :message, :as => :text, :placeholder => "Your Message", label: false, :input_html => { :class => 'form-control' } %>
                  <p class="help-block text-danger"></p>
                </div>
                <div class= "hidden">
                  <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                </div>
                
                <div class="col-lg-12 text-center">
                  <%= f.button :submit, 'Send message', :class=> "btn btn-xl" %>
                </div>
              <% end %>
              
            </div>
        </div>
    </div>
                
</section>

<div id="contact_form"></div>

